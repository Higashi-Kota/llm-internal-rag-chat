# Database
DATABASE_URL=postgresql+asyncpg://rag_chat:dev_password@localhost:5434/rag_chat

# Application
DEBUG=false
USE_MOCK=false
CORS_ORIGINS=

# Ollama settings (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=gemma3:4b
EMBEDDING_MODEL=nomic-embed-text

# Provider selection
LLM_PROVIDER=ollama
# Options: ollama, openai, anthropic, gemini

EMBEDDING_PROVIDER=ollama
# Options: ollama, openai

# RAG paths
CHROMA_DIR=data/chroma
DOCS_DIR=data/docs

# Chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval parameters
RETRIEVAL_K=4

# LLM parameters
MAX_TOKENS=2048
TEMPERATURE=0.7

# Cloud provider API keys (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
